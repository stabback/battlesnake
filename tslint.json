{
  "defaultSeverity": "error",
  "extends": [
      "tslint:recommended",
      "tslint-config-prettier",
      "tslint-plugin-prettier"
  ],
  "jsRules": {},
  "rules": {
      "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
      "no-console": false,
      "semicolon": false,
      "arrow-parens": [true, "ban-single-arg-parens"],
      "indent": [true, "spaces", 4],
      "prettier": [
        true,
        {
          "singleQuote": true,
          "trailingComma": "none",
          "tabWidth": 4,
          "semi": false
        }]
  },
  "rulesDirectory": []
}